# ============================================
# Crypto Bot Configuration Template
# ============================================
# Copy this file to .env and fill in your values
# cp .env.example .env
#
# IMPORTANT: Keep PAPER_TRADING=true until you've validated
# your bot with backtests and paper trading!
# ============================================

# ============================================
# Paper Trading / Simulation Mode
# ============================================
# Set to true to use mock exchange (safe for testing)
# Set to false only when ready for live trading
PAPER_TRADING=true

# Simulation settings (used when PAPER_TRADING=true)
SIMULATION_MODE=false
SIMULATION_STARTING_BALANCE=10000
SIMULATION_FEES=0.001

# ============================================
# Exchange API Keys
# ============================================
# At least one exchange must be configured for live trading
# All keys are optional when PAPER_TRADING=true

# Bybit Exchange
BYBIT_API_KEY=
BYBIT_API_SECRET=
BYBIT_TESTNET=false

# Binance Exchange
BINANCE_API_KEY=
BINANCE_API_SECRET=
BINANCE_TESTNET=false

# OKX Exchange
OKX_API_KEY=
OKX_API_SECRET=
OKX_PASSPHRASE=
OKX_TESTNET=false

# Hyperliquid Exchange
HYPERLIQUID_API_KEY=
HYPERLIQUID_API_SECRET=
HYPERLIQUID_WALLET=
HYPERLIQUID_TESTNET=false

# ============================================
# External APIs
# ============================================
# Helius API for MEV liquidation hunting on Solana
# Get free key at https://helius.xyz
HELIUS_API_KEY=

# ============================================
# Trading Parameters
# ============================================
# Starting capital in USD
STARTING_CAPITAL=1000

# Risk appetite (0.0 to 1.0, where 1.0 = maximum risk)
RISK_APPETITE=0.95

# Percentage of capital to allocate to strategies (0.0 to 1.0)
ALLOCATION_PERCENT=0.95

# ============================================
# MEV Settings
# ============================================
# Minimum liquidation size in USD to consider
MIN_LIQ_USD=40000

# Maximum execution size in USD per trade
MAX_EXECUTE_USD=12000

# Minimum profit in USD required to execute
MIN_PROFIT_USD=15

# ============================================
# Funding Rate Strategy Settings
# ============================================
# Number of top coins to trade based on funding rates
TOP_N_COINS=3

# Minimum funding rate to consider (0.0001 = 0.01%)
MIN_FUNDING_RATE=0.0001

# ============================================
# Risk Controls
# ============================================
# Maximum position size in USD
MAX_POSITION_SIZE_USD=5000

# Maximum daily loss as percentage (5.0 = 5%)
MAX_DAILY_LOSS_PERCENT=5.0

# Maximum daily loss in USD
MAX_DAILY_LOSS_USD=500

# Position reconciliation interval in seconds
POSITION_RECONCILIATION_INTERVAL=300

# ============================================
# Logging Configuration
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (leave empty to disable file logging)
LOG_FILE=logs/crypto_bot.log

# ============================================
# Storage & Memory
# ============================================
# Directory for storing chronological memory
MEMORY_DIR=data/memory

# Directory for historical data (for backtesting)
HISTORICAL_DATA_DIR=data/historical

# ============================================
# Monitoring & Alerts
# ============================================
# Enable alerting system
ENABLE_ALERTS=false

# Email address for alerts (if email alerts configured)
ALERT_EMAIL=
